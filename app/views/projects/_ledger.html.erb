<table class="hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <% payments.each do |payment| %>
        <tr>
            <td><%= payment.user.username %></td>
            <td><%= payment.amount %></td>
        </tr>
        <% end %>
    </tbody>
</table>
