<div class="column">
    <% projects.each_slice(3) do |project| %>

    <div class="row small-12 align-spaced">

        <% project.each do |pro| %>

        <section class="column medium-2 callout" id=<%= pro.id.to_s %>>

            <div class="row pic">
                <%= image_tag 'galaxy.gif' %>
            </div>

            <div class="row content">
                <%= pro.title %>
            </div>

            <div class="row callout pool">
                <%= render 'pools/thumb', pool: pro.pool %>
            </div>

        </section>
        <% end %>
    </div>
    <% end %>

</div>
