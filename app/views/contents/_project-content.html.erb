<div class="orbit" role="region" aria-label="submenu" data-orbit>
    <ul class="orbit-container orbit-color">
        <button class="orbit-previous">
            <span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
        <button class="orbit-next">
            <span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>

        <li class="is-active orbit-slide">
            <div class="text-center">
                <h3>About</h3>
                <% if @project.contents.find_by(kind: 'about') %>
                <p>
                    <%= @project.contents.find_by(kind: 'about').body %>
                </p>
                <% elsif users_project? %>
                <%= render 'contents/form', content: content, project: project, kind: 'about' %>
                <% end %>
            </div>
        </li>

        <li class="orbit-slide">
            <div class="text-center">
                <h3>Context</h3>
                <% if @project.contents.find_by(kind: 'context') %>
                <p>
                    <%= @project.contents.find_by(kind: 'context').body %>
                </p>
                <% elsif users_project? %>
                <%= render 'contents/form', content: content, project: project, kind: 'context' %>
                <% end %>
            </div>
        </li>

        <li class="orbit-slide">
            <div class="text-center">
                <h3>Importance</h3>
                <% if @project.contents.find_by(kind: 'importance') %>
                <p>
                    <%= @project.contents.find_by(kind: 'importance').body %>
                </p>
                <% elsif users_project? %>
                <%= render 'contents/form', content: content, project: project, kind: 'importance' %>
                <% end %>
            </div>
        </li>

        <li class="orbit-slide">
            <div class="text-center">
                <h3>Goals</h3>
                <% if @project.contents.find_by(kind: 'goals') %>
                <p>
                    <%= @project.contents.find_by(kind: 'goals').body %>
                </p>
                <% elsif users_project? %>
                <%= render 'contents/form', content: content, project: project, kind: 'goals' %>
                <% end %>
            </div>
        </li>
    </ul>

    <nav class="orbit-bullets">
        <button class="is-active" data-slide="0">
            <span class="show-for-sr">First slide details.</span>
            <span class="show-for-sr">Current Slide</span>
        </button>

        <button data-slide="1">
            <span class="show-for-sr">Second slide details.</span>
        </button>
        <button data-slide="2">
            <span class="show-for-sr">Third slide details.</span>
        </button>
        <button data-slide="3">
            <span class="show-for-sr">Fourth slide details.</span>
        </button>
    </nav>

</div>
